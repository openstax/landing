<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title + ' - ' if !current_page.data.title.nil? %>OpenStax</title>

    <meta property="og:title" content="OpenStax" />
    <meta property="og:description" content="Putting high-quality, flexible and free educational materials at your fingertips." />
    <meta property="og:image" content="http://openstax.org/mediakit/openstax_vertical_logo.png" />
    <meta property="og:url" content="http://openstax.org"/>
    <meta property="og:site_name" content="OpenStax"/>
    <meta property="og:type" content="website"/>
    
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>

    <meta name="Description" content="<%= @page_description ? @page_description : 'Putting high-quality, flexible and free educational materials at your fingertips.' %>">

    <link rel="shortcut icon" href="/favicon.ico" type="image/ico"/>

    <% if false %>
    <link href='http://fonts.googleapis.com/css?family=Lusitana' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Playfair+Display' rel='stylesheet' type='text/css'>
    <% end %>
    
    <link href='http://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>

    <% if build? %>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-49505718-1', 'openstax.org');
        ga('send', 'pageview');
      </script>
    <% end %>

  </head>
  
  <body class="<%= page_classes %>">
    <div id="content">
      <%= yield %>

      <div id='footer'>
        <%= "Copyright &copy; #{year = Time.now.year; 2014 == year ? "2014" : "2014&ndash;#{year}"} Rice University".html_safe %> |
        <%= link_to "Press", "http://openstaxcollege.org/press" %> |
        <%= link_to "News", "http://openstaxcollege.org/news" %> |
        <%= link_to "Contact Us", "http://openstaxcollege.org/contact" %>

        <div style="float:right" class='logo'>
          <% link_to "http://www.rice.edu" do %>
            <%= image_tag 'rice-logo.png', :style => 'float:right' %>
          <% end %>
        </div>
      </div>
    </div>

  </body>
</html>